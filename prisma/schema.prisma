generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum LogType {
  MANUAL
  QR
  SYSTEM
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String   @unique
  passwordHash String
  role      Role     @default(USER)
  active    Boolean  @default(true)

  counts    Count[]
  logsAsAdmin CountLog[] @relation("AdminLogs")
  logsAsUser  CountLog[] @relation("UserLogs")
}

model Drink {
  id            Int      @id @default(autoincrement())
  name          String
  stock         Int
  unitsPerCase  Int
  active        Boolean  @default(true)
  counts        Count[]
  logs          CountLog[]
}

model Count {
  id       Int @id @default(autoincrement())
  userId   Int
  drinkId  Int
  amount   Int

  user   User  @relation(fields: [userId], references: [id])
  drink  Drink @relation(fields: [drinkId], references: [id])

  @@unique([userId, drinkId])
}

model CountLog {
  id        Int      @id @default(autoincrement())
  adminId   Int
  userId    Int
  drinkId   Int
  oldAmount Int
  newAmount Int
  type      LogType
  createdAt DateTime @default(now())

  admin  User  @relation("AdminLogs", fields: [adminId], references: [id])
  user   User  @relation("UserLogs", fields: [userId], references: [id])
  drink  Drink @relation(fields: [drinkId], references: [id])
}